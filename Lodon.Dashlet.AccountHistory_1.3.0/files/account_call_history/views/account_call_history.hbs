<div class="tabbable tabs-full tab3">
    <ul id="tab" class="nav nav-tabs">
		{{#each number_of_calls}}
        <li class="active"><a href="#tab-chart" data-toggle="tab"><span class="count">{{total_calls}}</span>{{str "LBL_DASHLET_ACCOUNT_HISTORY_CALLS"}}</a></li>
		{{/each}}
		<li><a href="" data-toggle="tab" onclick='function(); return false;'><font style="color: lightgray;"><span class="count">0</span>{{str "LBL_DASHLET_ACCOUNT_HISTORY_TASKS"}}</font></a></li>
		<li><a href="" data-toggle="tab" onclick='function(); return false;'><font style="color: lightgray;"><span class="count">0</span>{{str "LBL_DASHLET_ACCOUNT_HISTORY_MEETINGS"}}</font></a></li>
	</ul>

	<div id="myTabContent" class="tab-content">
		<div class="tab-pane active" id="tab-chart">

		{{#if all_call_history}}
		<table class="table table-striped table-condensed">
			{{#each all_call_history}}
			<tr>
				<td>
					<div class="label label-module-mini label-{{parent_type}} pull-left">{{parent_type_substr}}</div>
				</td>
				<td>{{parent_name}} &raquo {{contact_name}} &raquo <a href="/#bwc/index.php?module=Calls&action=DetailView&record={{id}}">{{name}}</a>
				<br> {{date_start}} &raquo {{assigned_user_name}}
				<br>{{description}}
				</td>
			</tr>
			{{/each}}
		</table>
		{{/if}}

	</div>
