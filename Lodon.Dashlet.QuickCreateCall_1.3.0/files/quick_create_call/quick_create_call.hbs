<div data-dashlet="widget" class="widget-content" style="margin: 0px;">
    <div>
        <form class="form-inline">
            <ul class="unstyled">
                <li>{{str "LBL_DASHLET_QUICK_CREATE_CALL_DESCRIPTION"}}<br>
                     <textarea id="quick-create-call-description" style="width:96%"></textarea>
                </li>
                <li>
                    {{#if account_contacts}}
                        <select id="quick-create-call-contacts" style="width:100%">
                            {{#each account_contacts}}
                                <option value='{"id":"{{id}}","full_name":"{{full_name}}"}'>{{full_name}}</option>
                            {{/each}}
                        </select>
                    {{/if}}
                    
                    {{#if only_contacts}}
                        {{#each only_contacts}}
                        <input id="quick-create-call-contacts" type="hidden" value='{"id":"{{id}}","full_name":"{{full_name}}"}'>
                        {{/each}}
                    {{/if}}
                    
                </li>
                <li>
                    <label class="radio">
                      <input type="radio" name="quick-create-call-status-radios" id="quick-create-call-status-radio1" value="Held" checked>
                      {{str "LBL_DASHLET_QUICK_CREATE_CALL_HELD"}}
                    </label>
                </li>
                <li>
                    <label class="radio">
                      <input type="radio" name="quick-create-call-status-radios" id="quick-create-call-status-radio2" value="Planned">
                      {{str "LBL_DASHLET_QUICK_CREATE_CALL_PLANNED"}}
                    </label>
                </li>
                <li id="quick-create-call-datetime" style="display:none;">
                    <table>
                        <tr>
                            <td><label>{{str "LBL_DASHLET_QUICK_CREATE_CALL_START_DATE_AND_TIME"}}:&nbsp;</label>
                            </td>
                            <td>
                                <input style="width:90px;" type="text" class="span2" value="" placeholder="yyyy-mm-dd" id="quick-create-call-dp" rel="datepicker">
                                <input type="text" class="span2" placeholder="hh:mm" id="quick-create-call-tp" rel="timepicker" style="width:50px;"> 
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>{{str "LBL_DASHLET_QUICK_CREATE_CALL_DURATION"}}:&nbsp;</label>
                            </td>
                            <td>
                            <input type="text" id="quick-create-call-duration-h" style="width:25px;" value="0">
                            <select id="quick-create-call-duration-m" style="width:60px;">
                                <option>0</option>
                                <option selected>15</option>
                                <option>30</option>
                                <option>45</option>
                            </select>
                            </td>
                        </tr>
                    </table>
                </li>
                <li class="pull-right">
                    <button class="btn" id="quick-create-call-save">
                    &nbsp;{{str "LBL_DASHLET_QUICK_CREATE_CALL_SAVE"}}&nbsp;
                    </button>
                </li>
            </ul>
        </form>
    </div>
</div>
